def largest_rectangle_area_bruteforce(heights):
    n = len(heights)
    max_area = 0
    
    
    for i in range(n):
        height = heights[i]
        width = 1
        
        
        j = i - 1
        while j >= 0 and heights[j] >= height:
            width += 1
            j -= 1
        
       
        j = i + 1
        while j < n and heights[j] >= height:
            width += 1
            j += 1
        
        
        area = height * width
        max_area = max(max_area, area)
    
    return max_area


histogram = [2, 1, 5, 6, 2, 3]
print("Largest Rectangle Area:", largest_rectangle_area_bruteforce(histogram))
